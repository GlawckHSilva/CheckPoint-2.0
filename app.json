{
  "expo": {
    "name": "CheckPoint2.0",
    "slug": "CheckPoint2-0",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/image/icon.png",
    "scheme": "checkpoint20",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/image/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/image/favicon.png"
    },
    "plugins": [
  [
    "expo-camera",
    {
      "cameraPermission": "Allow CheckPoint to access your camera"
    }
  ],
  "expo-router",
  [
    "expo-splash-screen",
    {
      "image": "./assets/image/splash-icon.png",
      "imageWidth": 200,
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  ],
  "expo-font"
],
    "experiments": {
      "typedRoutes": true
    }
  }
}
